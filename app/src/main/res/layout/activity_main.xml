<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/court">

    <ru.ok.technopolis.basketball.CustomView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp" />

    <ImageView
        android:id="@+id/colco"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/back"
        android:layout_marginStart="500dp"
        android:layout_marginLeft="500dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/colco" />

    <TextView
        android:id="@+id/tv_fling_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_translate_fling"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <ru.ok.technopolis.basketball.BackView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/iv_translate_fling"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/back"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="125dp"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/ball2" />

    <ImageView
        android:id="@+id/empty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="600dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/player"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignBottom="@+id/back"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/player2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:visibility="visible"
        app:srcCompat="@drawable/coin" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="42dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginStart="50dp" />


</RelativeLayout>