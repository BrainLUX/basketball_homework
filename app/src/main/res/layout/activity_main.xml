<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/court">

    <ru.ok.technopolis.basketball.CustomView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/colco"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/colco" />

    <TextView
        android:id="@+id/tv_fling_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_translate_fling"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <ru.ok.technopolis.basketball.BackView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/iv_translate_fling"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/back"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="125dp"
        app:srcCompat="@drawable/basket" />

    <ImageView
        android:id="@+id/empty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="140dp" />

    <ImageView
        android:id="@+id/player"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignBottom="@+id/back"
        android:layout_marginLeft="100dp"
        android:src="@drawable/player2" />

</RelativeLayout>